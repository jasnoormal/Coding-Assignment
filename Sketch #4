// 4.Create a p5.js sketch
function setup() {
  createCanvas(400, 400); 
}

function draw() {
 
}

// a.) When the user presses the mouse, it will draw a line from the top-left corner to the bottom-right corner of the canvas.
function mousePressed() {
  stroke('red');  
  line(0, 0, width, height);  
}

// b.) When the user releases the mouse, it will draw a line from the top-right corner to the bottom-left corner of the canvas.
function mouseReleased() {
  stroke('blue'); 
  line(width, 0, 0, height);  
}
